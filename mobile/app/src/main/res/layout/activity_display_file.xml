<?xml version="1.0" encoding="utf-8"?>
<TableLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.ziemniak.bibliomobile.DisplayFileActivity"
		android:stretchColumns="*">

	<TableRow android:layout_margin="5dp"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent">
		<TextView
				android:text="Nazwa pliku"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/txtvFileName" android:textAlignment="center"
				android:textSize="20sp"
				android:layout_span="2"/>
	</TableRow>
	<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
				android:text="Data utworznia"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		<TextView
				android:text="Jeszcze nie wspierane"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/txtvCreationDate"/>
	</TableRow>
	<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
				android:text="Typ"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		<TextView
				android:text="TextView"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/txtvFileType"/>
	</TableRow>
	<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<Button
				android:text="Pobierz"
				android:layout_span="2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btnDownload"/>
	</TableRow>
</TableLayout>
