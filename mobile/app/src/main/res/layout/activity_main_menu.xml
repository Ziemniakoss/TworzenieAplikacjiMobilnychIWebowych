<?xml version="1.0" encoding="utf-8"?>
<TableLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context="com.ziemniak.bibliomobile.MainMenuActivity"
		android:stretchColumns="*">

	<TableRow android:layout_margin="5dp"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<TextView
				android:text="Witaj!"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" android:id="@+id/textView6" android:textSize="24sp"
				android:textAlignment="center"
		android:layout_span="2"/>
	</TableRow>
	<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">
		<Button
				android:text="Pliki"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btnShowFiles"/>
		<Button
				android:text="Bibliografie"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btnShowBibliographies"/>
	</TableRow>
</TableLayout>
